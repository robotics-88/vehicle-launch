<launch>
    <arg name="device_id" default="0"/>
    <arg name="camera_name" default="mapir_cam"/>
    <arg name="camera_info_yaml" default="$(find vehicle_launch)/params/mapir_cam_info.yaml"/>
    <arg name="image_width" default="1280"/>
    <arg name="image_height" default="720"/>

    <node pkg="cv_camera" type="cv_camera_node" name="mapir_cam">
        <param name="device_id" value="$(arg device_id)"/>
        <param name="frame_id" value="$(arg camera_name)"/>
        <param name="camera_info_url" value="file://$(arg camera_info_yaml)"/>
        <param name="pixel_format" value="mjpeg"/>
        <param name="image_width" value="$(arg image_width)"/>
        <param name="image_height" value="$(arg image_height)"/>
    </node>
</launch>