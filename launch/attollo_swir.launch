<launch>
    <arg name="device_id" default="0"/>
    <arg name="device_path" default="/dev/video0"/>
    <arg name="camera_name" default="attollo_cam"/>
    <arg name="camera_info_yaml" default="$(find vehicle_launch)/params/attollo_cam_info.yaml"/>
    <arg name="image_width" default="320"/>
    <arg name="image_height" default="256"/>

    <node pkg="cv_camera" type="cv_camera_node" name="attollo_cam">
        <param name="device_id" value="$(arg device_id)"/>
        <param name="device_path" value="$(arg device_path)"/>
        <param name="frame_id" value="$(arg camera_name)"/>
        <param name="camera_info_url" value="file://$(arg camera_info_yaml)"/>
        <param name="pixel_format" value="yuyv"/>
        <param name="image_width" value="$(arg image_width)"/>
        <param name="image_height" value="$(arg image_height)"/>
    </node>
</launch>