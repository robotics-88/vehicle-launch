<launch>
    <arg name="device_path" default="/dev/thermal_cam"/>
    <arg name="camera_name" default="thermal_cam"/>
    <arg name="camera_info_yaml" default="$(find-pkg-share vehicle_launch)/params/$(var camera_name)_info.yaml"/>
    <arg name="image_width" default="384"/>
    <arg name="image_height" default="288"/>
    <arg name="fps" default="25"/>
    <node pkg="cv_camera" exec="cv_camera_node" name="$(var camera_name)">
        <param name="rate" value="$(var fps)"/>
        <param name="device_path" value="$(var device_path)"/>
        <param name="frame_id" value="$(var camera_name)"/>
        <param name="camera_info_url" value="file://$(var camera_info_yaml)"/>
        <param name="pixel_format" value="yuyv"/>
        <param name="image_width" value="$(var image_width)"/>
        <param name="image_height" value="$(var image_height)"/>
    </node>
    <!-- <group ns="$(var camera_name)">
        <node pkg="image_proc" type="image_proc" name="image_proc"/>
    </group> -->
    
</launch>