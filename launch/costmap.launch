<launch>
    <arg name="rviz" default="false"/>
    <arg name="map_resolution" default="1.0"/> <!-- meter -->

    <!-- Publishes the voxel grid to rviz for display -->
    <!-- <node pkg="nav2_costmap_2d" exec="costmap_2d_markers" name="voxel_visualizer" if="$(var rviz)">
        <remap from="voxel_grid" to="costmap/voxel_grid"/>
    </node> -->

    <!-- Run the costmap node -->
    <group>
        <push-ros-namespace namespace="costmap"/>
        <node name="costmap_node" pkg="nav2_costmap_2d" exec="nav2_costmap_2d_node" >
            <remap from="base_scan" to="cloud_registered"/>
            <param from="$(find-pkg-share vehicle_launch)/config/decco_costmap.yaml"/>
            <param name="resolution" value="$(var map_resolution)"/>
        </node>
    </group>

</launch>